{
  "manifest_version": 3,
  "name": "Newsreader Pipeline",
  "version": "0.2.0",
  "description": "Capture reading lists and articles for the Newsreader host.",
  "permissions": ["storage", "tabs", "activeTab", "webRequest", "webRequestBlocking"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Newsreader Pipeline"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readability.js", "content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
